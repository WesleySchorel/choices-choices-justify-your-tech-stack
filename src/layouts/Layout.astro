---
// https://docs.astro.build/en/guides/view-transitions/
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <link rel="stylesheet" href="/public/global.css" />

    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="container">
      <header class="header">
        <a
          class="header__title"
          href="/"
          >Toolgankelijk</a
        >
      </header>
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>

